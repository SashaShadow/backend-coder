html
    head 
        link(rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        title Formulario de ingreso de productos pug
        style
            include style.css
    body 
        h2 Ingrese un producto
        form(action="/api/productos" method="post" class="myForm" enctype="application/json")
            div(class="form-group")
                label(for="title") Nombre
                input(type="text" name="title" class="form-control")
            div(class="form-group")
                label(for="price") Precio
                input(type="number" name="price" class="form-control")
            div(class="form-group")
                label(for="thumbnail") Imagen del producto
                input(type="text" name="thumbnail" class="form-control")
            button(type="submit" class="btn btn-primary") Enviar
        a(href="/api/productos") Ver productos ingresados
            
