html 
    head 
        link(rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        style
            include style.css
    body 
        if productos.length
            h2 Productos ingresados (pug)
            table(class="table table-dark")
                thead 
                    tr 
                        th(scope="col") Nombre 
                        th(scope="col") Precio 
                        th(scope="col") Imagen 
                        th(scope="col") ID
                tbody 
                each elem in productos
                    tr 
                        th(scope="row")=elem.title
                        th(scope="row")=elem.price
                        th(scope="row")
                            img(src=elem.thumbnail)
                        th(scope="row")=elem.id
        else 
            h2 No se han ingresado productos
            
        a(href="/api") Regresar al formulario